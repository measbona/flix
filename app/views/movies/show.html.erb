<h1> <%= @movie.title %></h1>
<%= image_for(@movie) %>
	
<article>	
		<header>
	<h1>
		<%= @movie.title %>
	</h1>
		</header>
	<h2>
		Description
	</h2>
		<p>
			<%= @movie.description %>
		</p>
	<p>
		<h3>
			Rating: <%= @movie.rating %>
		</h3>	
	</p>
<h3>Cast:     <%= @movie.cast %></h3>
<h3>Director: <%= @movie.director %></h3>
<h3>Duration: <%= @movie.duration %></h3>
		<p>
			<h3>
			 Released on: <%= @movie.released_on%>
			</h3>
		</p>
	<p>  
		<h3> 
		Price: <%= format_total_gross(@movie.total_gross) %>
		</h3>
	</p>
</article>

<%= link_to("All Movies", root_path) %> |
<%= link_to("Edit", edit_movie_path(@movie)) %> |
<%= link_to("Delete", movie_path(@movie), method: :delete, data:{confirm:"Are you sure to delete it ?"})%>
